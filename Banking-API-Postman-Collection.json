							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code should not be 200\", function () {\r",
									"    pm.response.to.not.equal(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Error message should return\", function() {\r",
